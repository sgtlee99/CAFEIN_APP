<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".SettingFragment">

	<!-- TODO: Update blank fragment layout -->
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:id="@+id/mypage_BackButton"
				android:text="◀"
				android:layout_marginStart="30dp"
				android:layout_marginTop="60dp"
				android:layout_marginEnd="80dp"
				android:backgroundTint="@color/orange" />

			<TextView
				android:layout_width="117dp"
				android:layout_height="37dp"
				android:id="@+id/mypage_Title"
				android:text="마이페이지"
				android:layout_centerHorizontal="true"
				android:layout_gravity="center"
				android:layout_marginTop="32dp"
				android:textSize="24sp" />
		</LinearLayout>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/mypage_Profile"
			android:background="@drawable/mypage_shape"
			android:layout_marginTop="20dp"
			android:layout_marginStart="60dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="70dp"
				android:layout_height="30dp"
				android:id="@+id/id_TextView"
				android:text="아이디"
				android:layout_marginStart="65dp"
				android:layout_marginTop="25dp"
				android:textSize="20sp" />

			<TextView
				android:layout_width="170dp"
				android:layout_height="30dp"
				android:id="@+id/id_Text"
				android:text="tkdgns123"
				android:background="@drawable/text_outline"
				android:layout_marginStart="35dp"
				android:layout_marginTop="19dp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="70dp"
				android:layout_height="30dp"
				android:id="@+id/nickname_TextView"
				android:text="닉네임"
				android:layout_marginStart="65dp"
				android:layout_marginTop="15dp"
				android:textSize="20sp" />

			<TextView
				android:layout_width="170dp"
				android:layout_height="30dp"
				android:id="@+id/nickname_Text"
				android:text="Sanghun"
				android:background="@drawable/text_outline"
				android:layout_marginStart="35dp"
				android:layout_marginTop="9dp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="90dp"
				android:layout_height="30dp"
				android:id="@+id/mygroup_TextView"
				android:text="나의 그룹"
				android:layout_marginStart="65dp"
				android:layout_marginTop="15dp"
				android:textSize="20sp" />

			<ImageView
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:src="@drawable/groupimg_cat"
				android:layout_marginStart="150dp"
				android:layout_marginTop="10dp"/>
		</LinearLayout>


		<Button
			android:layout_width="300dp"
			android:layout_height="60dp"
			android:id="@+id/mypage_InfoChangeButton"
			android:text="내 정보 수정"
			android:layout_gravity="center"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="70dp"
			android:backgroundTint="@color/orange" />

		<Button
			android:layout_width="300dp"
			android:layout_height="60dp"
			android:id="@+id/mypage_LikeCafeButton"
			android:text="좋아하는 카페"
			android:layout_gravity="center"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="5dp"
			android:backgroundTint="@color/orange" />

		<Button
			android:layout_width="300dp"
			android:layout_height="60dp"
			android:id="@+id/mypage_MyBoardButton"
			android:text="나의 작성글"
			android:layout_gravity="center"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="5dp"
			android:backgroundTint="@color/orange" />

		<Button
			android:layout_width="300dp"
			android:layout_height="60dp"
			android:id="@+id/mypage_LogoutButton"
			android:text="로그아웃"
			android:layout_gravity="center"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="5dp"
			android:backgroundTint="@color/orange" />

	</LinearLayout>

	</ScrollView>

</FrameLayout>