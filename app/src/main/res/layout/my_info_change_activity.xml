<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyInfoChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/infochange_BackButton"
            android:text="◀"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="75dp"
            android:backgroundTint="@color/orange" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="37dp"
            android:id="@+id/infochange_Title"
            android:text="내 정보 수정"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:textSize="24sp" />
    </LinearLayout>


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/infochange_NickName"
        android:hint="닉네임"
        android:background="@drawable/text_outline"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/infochange_pwInput"
        android:hint="비밀번호"
        android:background="@drawable/text_outline"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/infochange_pwInput_confirm"
        android:hint="비밀번호 확인"
        android:background="@drawable/text_outline"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/gender_TextView"
            android:text="성별"
            android:layout_marginStart="56dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/infochange_MaleradioButton"
            android:text="Male"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/infochange_FemaleradioButton"
            android:text="Female"
            android:layout_gravity="center" />
    </RadioGroup>


    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/infochange_SurveyButton"
        android:text="설문조사 다시하기"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/orange" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/infochange_OkButton"
        android:text="수정 완료"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/orange" />

</LinearLayout>

