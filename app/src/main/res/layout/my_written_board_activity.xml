<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyWrittenBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mywrittenboard_outBoard"
            android:background="@drawable/my_written_board_shape" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mywrittenboard_inBoard"
            android:background="@drawable/my_written_board_shape2"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mywrittenboard_cafenameBoard"
            android:background="@drawable/my_written_board_shape3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:id="@+id/mywrittenboard_ListCafename"
            android:text="내가 픽한 카페!"
            android:layout_marginTop="115dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:id="@+id/mywrittenboard_ListWrittenDate"
            android:text="22-05-06"
            android:gravity="right"
            android:layout_marginTop="150dp"
            android:layout_marginStart="100dp"
            android:textSize="12sp" />

    </FrameLayout>

</LinearLayout>
</LinearLayout>