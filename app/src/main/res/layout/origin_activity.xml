<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".OriginActivity"
		android:orientation="vertical">

	<TextView
		android:id="@+id/originpage_mainTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Cafe-In"
		android:textColor="#212121"
		android:textStyle="bold"
		android:layout_marginStart="60dp"
		android:layout_marginTop="40dp"
		android:textSize="50sp" />

	<TextView
		android:id="@+id/originpage_subTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="모두가 좋아하는 카페 속으로"
		android:textColor="#696969"
		android:textStyle="bold"
		android:layout_marginStart="60dp"
		android:layout_marginTop="110dp"
		android:textSize="20sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="200dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/originpage_catImg"
			android:layout_width="135dp"
			android:layout_height="135dp"
			android:layout_weight="1"
			android:layout_marginStart="45dp"
			android:src="@drawable/originpage_cat" />

		<ImageView
			android:id="@+id/originpage_dogImg"
			android:layout_width="135dp"
			android:layout_height="135dp"
			android:layout_weight="1"
			android:layout_marginEnd="45dp"
			android:src="@drawable/originpage_dog" />
	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="345dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/originpage_bearImg"
			android:layout_width="135dp"
			android:layout_height="135dp"
			android:layout_weight="1"
			android:layout_marginStart="45dp"
			android:src="@drawable/originpage_bear" />

		<ImageView
			android:id="@+id/originpage_foxImg"
			android:layout_width="135dp"
			android:layout_height="135dp"
			android:layout_weight="1"
			android:layout_marginEnd="45dp"
			android:src="@drawable/originpage_fox" />
	</LinearLayout>


	<Button
			android:id="@+id/originpage_loginbutton"
			android:layout_width="300dp"
			android:layout_height="60dp"
			android:text="로그인"
			android:textColor="#FFFFFFFF"
			android:backgroundTint="@color/bright_red"
			android:layout_marginTop="550dp"
			android:layout_gravity="center_horizontal"
			/>

	<Button
			android:id="@+id/originpage_siginupbutton"
			android:layout_width="300dp"
			android:layout_height="60dp"
			android:text="회원가입"
			android:textColor="#FFFFFFFF"
			android:backgroundTint="@color/orange"
			android:layout_marginTop="613dp"
			android:layout_gravity="center_horizontal"
			/>

</FrameLayout>