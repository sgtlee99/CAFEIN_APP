<?xml version="1.0" encoding="utf-8"?>
	<!-- CoordinatorLayout이 FrameLayout을 베이스로한 고급 레이아웃(layout_behavior을 쓰기위해 사용) -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
			 xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 xmlns:app="http://schemas.android.com/apk/res-auto"
			 tools:context=".HomeFragment">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/bright_red"
					android:layout_margin="5dp"

					/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/orange"
					android:layout_margin="5dp"

					/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/bright_blue"
					android:layout_margin="5dp"

					/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/bright_green"
					android:layout_margin="5dp"

					/>

		</LinearLayout>
		<!--		아이디 tag_listview-->



			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<androidx.recyclerview.widget.RecyclerView
						android:layout_width="match_parent"
						android:layout_height="50dp"
						app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
						android:orientation="horizontal"
						android:id="@+id/list_viewview"

						/>

				<androidx.recyclerview.widget.RecyclerView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
						android:id="@+id/cardview_recyclerviewview"
						app:layout_behavior="@string/appbar_scrolling_view_behavior"
						/>


			</LinearLayout>

	</LinearLayout>

	<Button
		android:id="@+id/btnUp"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_gravity="end|bottom"
		android:layout_margin="10dp"
		android:alpha="0.3"
		android:background="@drawable/up"
		app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
		/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>