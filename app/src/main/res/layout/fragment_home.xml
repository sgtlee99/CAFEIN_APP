<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 xmlns:app="http://schemas.android.com/apk/res-auto"
			 tools:context=".HomeFragment">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/bright_red"
					android:layout_margin="5dp"

					/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/orange"
					android:layout_margin="5dp"

					/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/bright_blue"
					android:layout_margin="5dp"

					/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:ignore="MissingConstraints"
					android:layout_weight="1"
					android:backgroundTint="@color/bright_green"
					android:layout_margin="5dp"

					/>

		</LinearLayout>
		<!--		아이디 tag_listview-->



			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<androidx.recyclerview.widget.RecyclerView
						android:layout_width="match_parent"
						android:layout_height="50dp"
						app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
						android:orientation="horizontal"
						android:id="@+id/list_viewview"

						/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/tagtag"/>

				<androidx.recyclerview.widget.RecyclerView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
						android:id="@+id/cardview_recyclerviewview"
						/>

			</LinearLayout>

	</LinearLayout>

</FrameLayout>